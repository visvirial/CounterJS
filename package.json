{
  "_": [
    "vim: set tabstop=2:",
    "vim: set expandtab:"
  ],
  "name": "counterjs",
  "version": "1.0.1",
  "description": "Counterparty Node.js/JavaScript library.",
  "author": "Vis Virial <visvirial@gmail.com>",
  "license": "MIT",
  "keywords": [
    "cryptocurrency",
    "bitcoin",
    "counterparty"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/visvirial/CounterJS.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "test": "./node_modules/.bin/jest --coverage",
    "mkdist": "mkdir -p dist",
    "browser:browserify": "browserify src/index.ts -p [ tsify --noImplicitAny ] --standalone counterjs >dist/bundle.js",
    "browser:minify": "terser dist/bundle.js --compress --mangle --output dist/bundle.min.js",
    "browser": "npm run mkdist && npm run browser:browserify && npm run browser:minify"
  },
  "dependencies": {
    "bitcoinjs-lib": "^2.3.0",
    "coininfo": "^4.5.0",
    "long": "^3.2.0"
  },
  "devDependencies": {
    "@types/bitcoinjs-lib": "^4.0.1",
    "@types/jest": "^23.0.0",
    "@types/long": "^4.0.0",
    "@types/node": "^12.7.2",
    "browserify": "^13.1.1",
    "coveralls": "^3.0.6",
    "jest": "^29.3.1",
    "terser": "^4.2.0",
    "ts-jest": "^23.0.0",
    "tsify": "^4.0.1",
    "typescript": "^3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
